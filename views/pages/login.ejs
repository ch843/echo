<%- include('../partials/head') %>
<%- include('../partials/header') %>
<body>
    <h1 class="title">Login</h1>

    <!-- Login portal -->
    <div id="login-section">
        <form class="login" action="/validate" method="post">
            <div class="form-group">
                <label for="username">Enter username:</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="username">
            </div>
                <div class="form-group">
                <label for="password">Enter password:</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="********">
            </div>
            <div id="new-acc">
                <span>Need an account?</span>
                <a href="/createUser" style="color: #4B8D97">Click here</a>
            </div>
            <button type="submit" class="btn btn-primary" id="login-btn">Login</button>
        <% if (msg == "error") { %>
            <p style="margin-top: 1em; color: red">Invalid credentials. Please try again or contact administrator.</p>
        <% } else if (msg == "success") { %>
            <p style="margin-top: 1em; color: green">You are already logged in. Feel free to explore other pages.</p>
        <% } else if (msg == "logout") { %>
            <p style="margin-top: 1em; color: green">You have been logged out.</p>
        <% } %>
    </form>
    </div>
</body>
<%- include('../partials/footer') %>
