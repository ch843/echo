<%- include('../partials/head') %>
<%- include('../partials/header') %>
<body>
    <h1 class="title">New Journal Entry</h1>
    <!-- Example of a form we could use to enter the journal entry -->
    <form class="entry">
        <div class="form-group">
          <label for="entryDate">Date of Entry</label>
          <input type="date" class="form-control" id="entryDate" placeholder="MM/DD/YYYY">
        </div>
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" placeholder="My Journal Entry">
          </div>
        <div class="form-group">
          <label for="response1">Prompt 1</label>
          <textarea class="form-control" id="reponse1" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="response2">Prompt 2</label>
            <textarea class="form-control" id="response2" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="response3">Prompt 3</label>
            <textarea class="form-control" id="response3" rows="5"></textarea>
        </div>
    </form>
</body>
